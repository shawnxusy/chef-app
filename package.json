{
  "name": "chef-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev -w @chef-app/server",
    "dev:web": "npm run dev -w @chef-app/web",
    "build": "npm run build -w @chef-app/shared && npm run build -w @chef-app/server && npm run build -w @chef-app/web",
    "start": "npm run start -w @chef-app/server",
    "lint": "eslint packages/*/src",
    "db:migrate": "npm run migrate -w @chef-app/server",
    "db:seed": "npm run seed -w @chef-app/server",
    "setup-hooks": "cp .hooks/* .git/hooks/ && chmod +x .git/hooks/pre-commit .git/hooks/pre-push"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^8.2.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.53.0"
  }
}
